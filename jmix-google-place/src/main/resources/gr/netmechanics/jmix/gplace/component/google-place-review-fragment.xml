<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
	<data readOnly="true">
		<instance id="reviewDc" class="gr.netmechanics.jmix.gplace.data.GooglePlaceReviewRef"/>
	</data>
	<content>
		<vbox classNames="gprf-review" spacing="false">
			<hbox alignItems="CENTER">
				<span dataContainer="reviewDc" property="authorName" classNames="author"/>
				<span dataContainer="reviewDc" property="publishTimeRelative" classNames="time"/>
			</hbox>

			<hbox alignItems="CENTER">
				<div dataContainer="reviewDc" property="rating" classNames="gprf-rating small"/>
				<div id="gprfReviewRatingStars" classNames="gprf-rating-stars small"/>
			</hbox>
			<p dataContainer="reviewDc" property="text"/>
		</vbox>
	</content>
</fragment>